generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                     String         @id
  name                   String?
  picture                String?
  sessions               Session[]
}

model Session {
  id         String   @id
  user_id    String
  user       User     @relation(references: [id], fields: [user_id], onDelete: Cascade)
  expires_at DateTime
}

